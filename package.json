  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.0.1",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.11",
    "live-server": "^1.2.1",
    "postcss": "^8.2.9",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.1.1"
